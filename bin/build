#!/bin/bash

docker run --rm -it --platform=linux/amd64 -v $(pwd):/workspace -w /workspace crystallang/crystal:latest-alpine /bin/sh -c "shards install && crystal build src/velero-notifications.cr --static"


IMAGE="woutthenines/velero-backup-notification"
VERSION="$(git describe --tags --abbrev=0)"

docker build --platform=linux -t ${IMAGE}:${VERSION} .

docker push ${IMAGE}:${VERSION}
